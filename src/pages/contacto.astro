              <p class="text-4xl font-bold mb-2 text-smartcheck-blue">1h</p>
              <p class="text-gray-600">Entrega de Reportes</p>
            </div>
            
            <!-- Stat 3 -->
            <div>
              <p class="text-4xl font-bold mb-2 text-smartcheck-blue">150+</p>
              <p class="text-gray-600">Puntos de Revisión</p>
            </div>
            
            <!-- Stat 4 -->
            <div>
