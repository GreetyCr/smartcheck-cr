---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonicalURL?: string;
  image?: string;
}

const {
  title,
  description,
  canonicalURL = Astro.url.href,
  image = '/images/social-share.jpg',
} = Astro.props;

const siteName = 'SmartCheck Costa Rica';
---

<!doctype html>
<html lang="es-CR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Preconexión y optimización -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&display=swap">
    
    <!-- Performance & Accessibility -->
    <meta name="format-detection" content="telephone=no" />
    <meta name="theme-color" content="#ffffff" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- PWA support -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="SmartCheck" />
    
    <!-- Additional Meta -->
    <meta name="generator" content={Astro.generator} />
    <title>{title} | {siteName}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | ${siteName}`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | ${siteName}`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <!-- Estilos críticos inline para evitar bloqueo de renderizado -->
    <style is:inline>
      body {
        margin: 0;
        font-family: 'Outfit', sans-serif;
        opacity: 0;
        animation: fadeIn 0.3s ease-in forwards;
      }
      @keyframes fadeIn {
        to { opacity: 1; }
      }
      .hero-text {
        z-index: 10;
      }
    </style>
  </head>
  <body>
    <header class="fixed top-0 left-0 right-0 bg-white shadow-sm z-50">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between py-4">
          <!-- Logo -->
          <a href="/" class="text-2xl font-bold text-smartcheck-blue">
            SmartCheck
          </a>
          
          <!-- Desktop Navigation -->
          <nav class="hidden md:flex gap-6">
            <a href="/" class="text-gray-800 hover:text-smartcheck-blue font-medium">Inicio</a>
            <a href="/servicios" class="text-gray-800 hover:text-smartcheck-blue font-medium">Servicios</a>
            <a href="/sobre-nosotros" class="text-gray-800 hover:text-smartcheck-blue font-medium">Sobre Nosotros</a>
            <a href="/blog" class="text-gray-800 hover:text-smartcheck-blue font-medium">Blog</a>
            <a href="/preguntas-frecuentes" class="text-gray-800 hover:text-smartcheck-blue font-medium">FAQ</a>
            <a href="/contacto" class="text-gray-800 hover:text-smartcheck-blue font-medium">Contacto</a>
          </nav>
          
          <!-- Mobile Menu Button -->
          <button id="mobile-menu-button" class="md:hidden text-gray-500 focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="md:hidden hidden pb-4">
          <a href="/" class="block py-2 text-gray-800 hover:text-smartcheck-blue font-medium">Inicio</a>
          <a href="/servicios" class="block py-2 text-gray-800 hover:text-smartcheck-blue font-medium">Servicios</a>
          <a href="/sobre-nosotros" class="block py-2 text-gray-800 hover:text-smartcheck-blue font-medium">Sobre Nosotros</a>
          <a href="/blog" class="block py-2 text-gray-800 hover:text-smartcheck-blue font-medium">Blog</a>
          <a href="/preguntas-frecuentes" class="block py-2 text-gray-800 hover:text-smartcheck-blue font-medium">FAQ</a>
          <a href="/contacto" class="block py-2 text-gray-800 hover:text-smartcheck-blue font-medium">Contacto</a>
        </div>
      </div>
    </header>
    
    <main class="pt-16">
      <slot />
    </main>
    
